<Window x:Class="Wheel.QuestionWheel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wheel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="QuestionWheel" Height="150" Width="300" ResizeMode="CanMinimize" WindowStyle="None">
    <Grid Background="#FF2B2121">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Quest"
               Content=""
               Margin="25,10,25,80" Foreground="White"
               />

        <TextBox Margin="15,100,100,20"
                 x:Name="Answer"
                 Background="WhiteSmoke"/>

        <Button Margin="215,100,15,20"
                Content="Ответить"
                Click="GiveAnswer"/>

    </Grid>
</Window>
